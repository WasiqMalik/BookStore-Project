@model DB_Project.Models.Book

<div>
    <div class="card rounded px-5 py-2">
        <div class="card-body">
            <form action="UpdateBook" class="form needs-validation" role="form" autocomplete="off" method="post">

                <div class="form-group">
                    <input type="hidden" class="form-control" id="C_BookID" name="BookID" value="@Model.BookID" required />
                </div>

                <div class="form-group">
                    <label for="C_Title">Title</label>
                    <input type="text" class="form-control" placeholder="Enter Title of Book" id="C_Title" name="Title" value="@Model.Title"required>
                    <div class="invalid-feedback">Please enter valid input</div>
                </div>

                <div class="form-group">
                    <label for="C_Synopsis">Description</label>
                    <input type="text" class="form-control" placeholder="Enter Description of Book" id="C_Synopsis" name="Synopsis" value="@Model.Synopsis" required>
                    <div class="invalid-feedback">Please enter valid input</div>
                </div>

                <div class="form-group">
                    <label for="C_Publisher">Publisher Name</label>
                    <input type="text" class="form-control" placeholder="Enter Publisher of Book" id="C_Publisher" name="Publisher" value="@Model.Publisher" required>
                    <div class="invalid-feedback">Please enter valid input</div>
                </div>

                <div class="form-group">
                    <label for="C_Category">Category Name</label>
                    <input type="text" class="form-control" placeholder="Enter Category of Book" id="C_Category" name="Category" value="@Model.Category" required>
                    <div class="invalid-feedback">Please enter valid input</div>
                </div>

                <div class="form-group">
                    <label for="C_Price">Price</label>
                    <input type="text" class="form-control" placeholder="Enter Price of Book" id="C_Price" name="Price" value="@Model.Price" required>
                    <div class="invalid-feedback">Please enter valid input</div>
                </div>

                <div class="form-group">
                    <label for="C_Stock">Stock</label>
                    <input type="text" class="form-control" placeholder="Enter Stock Value" id="C_Stock" name="Stock" value="@Model.Stock" required>
                    <div class="invalid-feedback">Please enter valid input</div>
                </div>


                @if (Model.SubStatus)
                {
                    <div>
                        <label for="SubStatus">Subscription</label>
                        <input type="radio" name="SubStatus" value="True" checked="checked">Allow
                        <input type="radio" name="SubStatus" value="False">Not Allowed
                        <div class="invalid-feedback">Select Option</div>
                    </div>
                }
                else
                {
                    <div>
                        <label for="SubStatus">Subscription</label>
                        <input type="radio" name="SubStatus" value="True">Allow
                        <input type="radio" name="SubStatus" value="False" checked="checked">Not Allowed
                        <div class="invalid-feedback">Select Option</div>
                    </div>
                }

                @*<div>
                        <label for="SubStatus">Subscription</label>
                        <input type="radio" name="SubStatus" value="True">Allow
                        <input type="radio" name="SubStatus" value="False"">Not Allowed
                        <div class="invalid-feedback">Select Option</div>
                    </div>*@


                <div class="form-group">
                    <label for="C_Authors">Authors</label>
                    <input type="text" class="form-control" placeholder="Enter Authors of Book in comma seperated string" id="C_Authors" name="Authors" value="@if (Model.Authors != null)
                    {
                        for (int i = 0; i < Model.Authors.Count - 1; i++)
                        {
                            @Model.Authors[i].Insert(Model.Authors[i].Length, ",")
                        }
                        @Model.Authors[Model.Authors.Count - 1]
                    }" required>
                    <div class="invalid-feedback">Please enter valid email</div>
                </div>

                <div class="form-group">
                    <label for="C_Genres">Genres</label>
                    <input type="text" class="form-control" placeholder="Enter Genres of Book" id="C_Genres" name="Genres" value="@if (Model.Genres != null)
                    {
                        for (int i = 0; i < Model.Genres.Count - 1; i++)
                        {
                            @Model.Genres[i].Insert(Model.Genres[i].Length, ",")
                        }
                        @Model.Genres[Model.Genres.Count - 1]
                    }" required>
                    <div class="invalid-feedback">Please enter valid email</div>
                </div>

                <div>
                    <button type="submit" class="btn btn-success float-right">Update Book</button>
                </div>

            </form>
        </div>
    </div>
</div>

