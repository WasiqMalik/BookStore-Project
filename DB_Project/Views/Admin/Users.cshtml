
@{
    ViewBag.Title = "Users";
}

@model List<DB_Project.Models.Account>

@section CustomHeader{
    <nav id="mynavbar" class="navbar navbar-expand-sm bg-light">

        <a class="navbar-brand" href="#">BookStore</a>
        <ul class="navbar-nav ml-auto">
            @if (Session["UserName"] != null)
            {
                <p class="navbar-text"> Welcome, @Session["UserName"].ToString() </p>
            }
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Home")"> Logout </a>
            </li>
        </ul>
    </nav>
}

<div class="row">
    <div class="col-2">
        <div class="sidenav">
            <a href="@Url.Action("Console", "Admin")">Books</a>
            <a href="@Url.Action("Order", "Admin")">Orders</a>
            <a href="@Url.Action("Users", "Admin")">Users</a>
        </div>
    </div>

    <div class="container body-content">

        <h3 class="divheading text-center"> Users </h3>
        <hr class="hunderline" />

        <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("UserList", "Admin")'">All Users</button>

        @if (Model != null)
        {
            <table id="example" class="table table-striped table-bordered table-hover" cellspacing="0">
                <tr>
                    <th>UserID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Details</th>
                    <th>Remove</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserID</td>
                        <td>@item.Username</td>
                        <td>@item.Email</td>
                        <td><a href="#" class="btn btn-success" onclick="UserDetailsfunction(@item.UserID)"><i class="glyphicon glyphicon-pencil"></i></a></td>
                        <td><a href=" ../../Admin/RemoveUsers?id=@item.UserID" class="btn btn-danger"><i class="glyphicon glyphicon-bin"></i> </a></td>
                    </tr>


                }
            </table>
        }

        <div class="modal fade" id="userDetailsModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title">Edit Book</h3>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body" id="userDetailsModalBodyDiv1">
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>


<script>
    var UserDetailsfunction = function (bid) {

        var url = "/Admin/EditBook?id=" + bid;

        $("#userDetailsModalBodyDiv1").load(url, function () {
            $("#userDetailsModal").modal("show");

        })
    }
</script>