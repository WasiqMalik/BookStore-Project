        <div class="container body-content">

            <h2>Order</h2>

            <button type="button" class="btn btn-info btn-lg" onclick="location.href='@Url.Action("AllOrders", "Admin")'">Display All Orders</button>

            @if (Model != null)
            {
                <table class="table table-striped table-bordered table-hover" cellspacing="0">
                    <tr>
                        <th>OrderID</th>
                        <th>UserID</th>
                        <th>Date</th>
                        <th>OrderStatus</th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderID</td>
                            <td>@item.UserID</td>
                            <td>@item.Date</td>
                            <td>@item.OrderStatus</td>
                            <td><a href="#" class="btn btn-success" onclick="ShowDetails(@item.OrderID)"><i class="glyphicon glyphicon-pencil"></i> </a> </td>
                            <td><a href="" onclick="DeleteOrderfunction(@item.OrderID)" class="btn btn-danger"><i class="glyphicon glyphicon-bin"></i> </a> </td>
                        </tr>
                    }
                </table>
            }
        </div>

