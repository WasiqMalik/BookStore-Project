@model int

<div>
    <div class="card rounded px-5 py-2">
        <div class="card-body">
            <form action="UpdateUserPriviledges" class="form needs-validation" role="form" autocomplete="off" method="post">

                <input type="hidden" class="form-control" name="UserID" value=@Model required />

                <div>
                    <label for="AccessStatus">Status</label>
                    <input type="radio" name="AccessStatus" value="0" required>User
                    <input type="radio" name="AccessStatus" value="1">Admin
                    <div class="invalid-feedback">Select Option</div>
                </div>

                <div>
                    <button type="submit" class="btn btn-success float-right">Update Status</button>
                </div>

            </form>

        </div>
    </div>
</div>

