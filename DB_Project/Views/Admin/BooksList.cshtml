
@{
    ViewBag.Title = "BooksList";
}

@model List<DB_Project.Models.Book>

<h2>BooksList</h2>

@if (Model != null)
{
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>Title</th>
            <th>Synopsis</th>
            <th>Publisher</th>
            <th>Category</th>
            <th>Price</th>
            <th>Stock</th>
            <th>SubStatus</th>
            <th>Authors</th>
            <th>Genres</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Title </td>
                <td>@item.Synopsis</td>
                <td>@item.Publisher</td>
                <td>@item.Category</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.SubStatus</td>
                <td>
                   @for (int i = 0; i < item.Authors.Count - 1; i++)
                    {
                        @item.Authors[i].Insert(item.Authors[i].Length, ",");
                    }
                    @item.Authors[item.Authors.Count - 1]
                </td>
                <td>
                   @for (int i = 0; i < item.Genres.Count - 1; i++)
                    {
                        @item.Genres[i].Insert(item.Genres[i].Length, ",");
                    }
                    @item.Genres[item.Genres.Count - 1]

                </td>
                <td><a href="#" class="btn btn-success" onclick="DeleteBookfunction(@item.BookID)"><i class="glyphicon glyphicon-pencil"></i> </a> </td>
            </tr>
        }
    </table>
}


