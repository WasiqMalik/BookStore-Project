
@{
    ViewBag.Title = "BooksList";
}

@model List<DB_Project.Models.Book>

<h2>BooksList</h2>

@if (Model != null)
{
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>Title</th>
            <th>Synopsis</th>
            <th>Publisher</th>
            <th>Category</th>
            <th>Price</th>
            <th>Stock</th>
            <th>SubStatus</th>
            <th>Authors</th>
            <th>Genres</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Title </td>
                <td>@item.Synopsis</td>
                <td>@item.Publisher</td>
                <td>@item.Category</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.SubStatus</td>
                <td>
                    @foreach (string str in item.Authors)
                    {
                        @str.Insert(str.Length, " ");
                    }
                </td>
                <td>
                    @foreach (var str in item.Genres)
                    {
                        @str.Insert(str.Length, " ");
                    }
                </td>
                <td><a href="#" class="btn btn-success" onclick="DeleteBookfunction(@item.BookID)"><i class="glyphicon glyphicon-pencil"></i> </a> </td>
            </tr>
        }
    </table>
}


