
@{
    ViewBag.Title = "Requests";
}

@model List<DB_Project.Models.Request>

@section CustomHeader{
    <nav class="navbar navbar-expand-sm bg-light">

        <a class="navbar-brand" href="#">BookStore</a>
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="#"> DashBoard </a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Cart", "User")"> <i class="fa fa-shopping-cart" style="font-size:28px"></i> </a>
            </li>
            @if (Session["UserName"] != null)
            {
                <p class="navbar-text"> Welcome, @Session["UserName"].ToString() </p>
            }
            <li class="nav-item ml-auto">
                <a class="nav-link" href="@Url.Action("Index", "Home")"> Logout </a>
            </li>
        </ul>
    </nav>
}


<div class="row">
    <div class="col-2">
        <div class="sidenav">
            <a href="@Url.Action("DashBoard", "User")">DashBoard</a>
            <a href="@Url.Action("Books", "User")">Books</a>
            <a href="@Url.Action("Requests", "User")">Requests</a>
            <a href="@Url.Action("Orders", "User")">Orders</a>
            <a href="@Url.Action("History", "User")">History</a>
            <a href="@Url.Action("Subscriptions", "User")">Subscriptions</a>
            <a href="@Url.Action("ProfileInfo", "User")">Profile</a>
        </div>
    </div>


    <div class="container body-content">
        <h3 class="divheading text-center">Requests</h3>
        <hr class="hunderline" />

        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#NewRequestModal">New Request</button>

        <div class="modal fade" id="NewRequestModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title">Add Request</h3>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body" id="NewRequestModalBodyDiv1">
                        <div class="card rounded px-5 py-2">
                            <div class="card-body">
                                <form action="AddRequest" class="form needs-validation" role="form" autocomplete="off" method="post">

                                    <div class="form-group">
                                        <label for="C_Request">Description</label>
                                        <input type="text" class="form-control" placeholder="Enter Your Request" id="C_Request" name="Description" required>
                                        <div class="invalid-feedback">Please enter valid input</div>
                                    </div>

                                    <div>
                                        <button type="submit" class="btn btn-success btn-block">Request</button>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if(Model != null && Model.Count != 0)
        {
            <table class="table table-striped table-bordered table-hover" cellspacing="0">
                <tr>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Delete</th>
                </tr>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Description</td>
                        <td>@item.Date</td>
                        <td>@item.RequestStatus</td>
                        <td><a href=" ../../User/RemoveRequest?id=@item.RequestID" class="btn btn-danger"><i class="fa fa-trash"></i> </a> </td>
                    </tr>

                }
            </table>
        }



    </div>
</div>

